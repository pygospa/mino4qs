.container
  -flash.each do |key, value|
    %div{class: "alert alert-#{key}"}= value
  =form_with model: @personal_data_set do |form|
    .form-group.row
      .col-sm-2
        =form.label :birthday, class: 'col-form-label'
      .col-sm-10
        =form.date_field :birthday, class: 'form-control'
    .form-group.row
      .col-sm-2
        =form.label :gender, class: 'col-form-label'
      .col-sm-10
        =form.text_field :gender, class: 'form-control'
    .form-group.row
      .col-sm-2
        =form.label :height, class: 'col-form-label'
      .col-sm-10
        =form.text_field :height, class: 'form-control'
    .form-group.row
      .col-sm-1.offset-sm-2
        =form.submit 'Submit', class: 'btn btn-primary'
