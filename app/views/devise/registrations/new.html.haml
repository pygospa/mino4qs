%h2 Sign up
=form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  =render "devise/shared/error_messages", resource: resource
  .form-group.row
    =f.label :birthday, class: 'col-form-label'
    =f.text_field :birthday, autofocus: true, class: 'form-control'

  .form-group.row
    =f.label :height, class: 'col-form-label'
    =f.text_field :height, autofocus: true, class: 'form-control'

  .form-group.row
    .form-check
      =f.radio_button :sex,"female"
      =f.label :sex_female, 'Female'
    .form-check
      =f.radio_button :sex, "male"
      =f.label :sex_male, 'Male'

  .form-group.row
    =f.label :email, class: 'col-form-label'
    =f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', "aria-describedby" => "emailHelp"
    %small.form-text.text-muted
      We'll never share your email with anyone else.

  .form-group.row
    =f.label :password, class: 'col-form-label'
    =f.password_field :password, autocomplete: "new-password", class: 'form-control'
    -if @minimum_password_length
      %small.form-text.text-muted
        (#{@minimum_password_length} characters minimum)

  .form-group.row
    =f.label :password_confirmation, class: 'col-form-label'
    =f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'

  .actions
    =f.submit "Sign up", class: 'btn btn-success'
=render "devise/shared/links"
