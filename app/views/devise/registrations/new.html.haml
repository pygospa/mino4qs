%h2.my-5 Register a new account

=form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  =render "devise/shared/error_messages", resource: resource
  .row.form-group
    =f.label :birthday, class: 'col-md-2 col-form-label'
    .col-md-10
      =f.text_field :birthday, autofocus: true, class: 'form-control'

  .row.form-group
    =f.label :height, class: 'col-md-2 col-form-label'
    .col-md-10
      =f.text_field :height, autofocus: true, class: 'form-control'

  %fieldset.form-group
    .row
      %legend.col-md-2.col-form-label
        Sex
      .col-md-10
        .form-check
          =f.radio_button :sex, 'female', class: 'form-check-input'
          =f.label :sex_female, 'Female', class: 'form-check-label'
        .form-check
          =f.radio_button :sex, "male", class: 'form-check-input'
          =f.label :sex_male, 'Male', class: 'form-check-label'

  .row.form-group
    =f.label :email, class: 'col-md-2 col-form-label'
    .col-md-10
      =f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', "aria-describedby" => "emailHelp"
      %small.form-text.text-muted
        We'll never share your email with anyone else.

  .row.form-group
    =f.label :password, class: 'col-md-2 col-form-label'
    .col-md-10
      =f.password_field :password, autocomplete: "new-password", class: 'form-control'
      -if @minimum_password_length
        %small.form-text.text-muted
          (#{@minimum_password_length} characters minimum)

  .row.form-group
    =f.label :password_confirmation, class: 'col-md-2 col-form-label'
    .col-md-10
      =f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'

  .row.actions.mb-4
    .col-md-10.offset-2
      =f.submit "Register", class: 'btn btn-success'

=render "devise/shared/links"
